@model Green.Web.Models.Dto.CouponDto

<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create Coupon</h1>
        <input asp-for="Id" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Code</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Code" disabled />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Discount" disabled />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Minimum Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="MinimumAmount" disabled />
            </div>
            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="Index">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>